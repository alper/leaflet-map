{
  "name": "leaflet-map",
  "description": "Webcomponent leaflet-map following open-wc recommendations",
  "license": "MIT",
  "author": "leaflet-map",
  "version": "0.0.0",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "eslint:check": "for file in `find src -type f -name '*.ts' -o -name '*.js'`; do eslint --print-config $file | eslint-config-prettier-check; done",
    "format": "run-p format:*",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "format:pretter-package-json": "prettier-package-json --write ./package.json",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "run-p lint:*",
    "lint:analyze": "lit-analyzer leaflet-map.ts --strict",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run build:watch\" \"es-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "storybook": "concurrently --kill-others --names tsc,storybook \"npm run build:watch\" \"start-storybook --node-resolve --watch --open\"",
    "storybook:build": "build-storybook",
    "test": "npm run build && karma start --coverage",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run build:watch\" \"karma start --auto-watch=true --single-run=false\""
  },
  "dependencies": {
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^2.3.13",
    "@open-wc/eslint-config": "^2.0.6",
    "@open-wc/testing": "^2.5.19",
    "@open-wc/testing-karma": "^4.0.0",
    "@types/node": "14.0.25",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "concurrently": "^5.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "lit-analyzer": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "ts-lit-plugin": "^1.2.1",
    "tslib": "^2.0.0",
    "typescript": "~3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 160
  }
}
